{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "*": [
        "types/*"
      ],
      "core-js/es7/reflect": [
        "../../../../node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/*": [
        "../../../../node_modules/core-js/es"
      ]
    },
    "typeRoots": [
      "../../../../node_modules/@types"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
